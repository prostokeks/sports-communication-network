<%= link_to "Add room", new_room_path %>

<% @rooms.each do |r| %>
  <%= r.created_at.strftime("%d %b %Y") %>
  <%= r.title %>
  <%= link_to "Show", room_path(r) %>
  <%= link_to "Edit", edit_room_path(r) %>
  <%= link_to "Delete", room_path(r), data: { "turbo-method": :delete, turbo_confirm: "You sure?" }, class: "flex items-center flex-shrink-0 px-5 py-2 border-b-4 dark:border-gray-800 dark:text-gray-800 hover:dark:border-blue-500 hover:dark:text-blue-500" %>
<% end %>