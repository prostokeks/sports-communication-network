<% provide(:header, @room.title) %>

<div class="flex items-center -mx-4 space-x-2 overflow-x-auto overflow-y-hidden sm:justify-center flex-nowrap dark:text-gray-100">
  <%= link_to "Back", rooms_path, class: "flex items-center flex-shrink-0 px-5 py-2 border-b-4 dark:border-gray-800 dark:text-gray-800 hover:dark:border-blue-500 hover:dark:text-blue-500" %>
  <% if user_signed_in? and current_user.workgroup == "Admin" %>
    <%= link_to "Edit", edit_room_path(@room), class: "flex items-center flex-shrink-0 px-5 py-2 border-b-4 dark:border-gray-800 dark:text-gray-800 hover:dark:border-blue-500 hover:dark:text-blue-500" %>
    <%= link_to "Delete", room_path(@room), data: { "turbo-method": :delete, turbo_confirm: "You sure?" }, class: "flex items-center flex-shrink-0 px-5 py-2 border-b-4 dark:border-gray-800 dark:text-gray-800 hover:dark:border-blue-500 hover:dark:text-blue-500" %>
  <% end %>
</div>

<article class="px-4 py-12 mx-auto max-w-7xl" >


  <div class="w-full mx-auto prose md:w-3/4 lg:w-1/2">
    <%= @room.content %>
  </div>
</article>


<%= render "chats/chat_block" %>