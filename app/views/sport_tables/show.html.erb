<% provide(:header, "Sport result for " + @sport_result.created_at.strftime("%d.%m.%Y")) %>

<div class="flex items-center -mx-4 space-x-2 overflow-x-auto overflow-y-hidden sm:justify-center flex-nowrap dark:text-gray-100">
  <%= link_to "Back", :back, class: "flex items-center flex-shrink-0 px-5 py-2 border-b-4 dark:border-gray-800 dark:text-gray-800 hover:dark:border-blue-500 hover:dark:text-blue-500" %>
  <% if current_user == @sport_result.user %>
    <%= link_to "Edit", edit_sport_table_path(@sport_result), class: "flex items-center flex-shrink-0 px-5 py-2 border-b-4 dark:border-gray-800 dark:text-gray-800 hover:dark:border-blue-500 hover:dark:text-blue-500" %>
    <%= link_to "Delete", sport_table_path(@sport_result), data: { "turbo-method": :delete, turbo_confirm: "You sure?" }, class: "flex items-center flex-shrink-0 px-5 py-2 border-b-4 dark:border-gray-800 dark:text-gray-800 hover:dark:border-blue-500 hover:dark:text-blue-500" %>
  <% end %>
</div>

<table class="rounded-lg m-5 w-full mx-auto bg-gray-200 text-gray-800 text-center">
  <thead>
  <tr class="border-b-2 border-gray-300">
    <th class="py-3">Weight</th>
    <th class="py-3">Chest</th>
    <th class="py-3">Waist</th>
    <th class="py-3">Belly</th>
    <th class="py-3">Ass</th>
    <th class="py-3">Leg</th>
  </tr>
  </thead>
  <tbody>
     <tr class="bg-white border-b border-gray-200 ">
      <td class="py-3"><%= @sport_result.weight %></td>
      <td><%= @sport_result.chest %></td>
      <td><%= @sport_result.waist %></td>
      <td><%= @sport_result.belly %></td>
      <td><%= @sport_result.ass %></td>
      <td><%= @sport_result.leg %></td>
    </tr>
  </tbody>
</table>

<section class="py-6">
  <div class="container flex flex-col justify-center p-4 mx-auto">
    <div class="grid grid-cols-1 gap-4 lg:grid-cols-4 sm:grid-cols-2">
      <% @sport_result.images.each do |image| %>
          <%= image_tag image, class:"object-cover w-full dark:bg-gray-500 aspect-square" %>
      <% end %>
    </div>
  </div>
</section>

<div class="flex divide-x-2 rounded dark:text-gray-100 divide-gray-700">


