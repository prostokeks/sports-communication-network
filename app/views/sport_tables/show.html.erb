<% provide(:header, "Sport result for " + @sport_result.created_at.strftime("%d.%m.%Y")) %>

<div class="inline-flex items-center gap-2 list-none lg:ml-auto">
  <%= link_to "Back", current_user, class: "items-center block px-10 py-3 text-base font-medium text-center text-white transition duration-500 ease-in-out transform bg-blue-600 rounded-xl hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  <% if current_user == @sport_result.user %>
  <%= link_to "Edit", edit_sport_table_path(@sport_result), class: "items-center block px-10 py-3 text-base font-medium text-center text-white transition duration-500 ease-in-out transform bg-blue-600 rounded-xl hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  <%= link_to "Delete", sport_table_path(@sport_result), data: { "turbo-method": :delete,
                                                                 turbo_confirm: "You sure?" }, class: "items-center block px-10 py-3 text-base font-medium text-center text-white transition duration-500 ease-in-out transform bg-blue-600 rounded-xl hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  <% end %>
</div>

<table class="rounded-lg m-5 w-full mx-auto bg-gray-200 text-gray-800 text-center">
  <thead>
  <tr class="border-b-2 border-gray-300">
    <th class="py-3">Weight</th>
    <th class="py-3">Chest</th>
    <th class="py-3">Waist</th>
    <th class="py-3">Belly</th>
    <th class="py-3">Ass</th>
    <th class="py-3">Leg</th>
  </tr>
  </thead>
  <tbody>
     <tr class="bg-white border-b border-gray-200 ">
      <td class="py-3"><%= @sport_result.weight %></td>
      <td><%= @sport_result.chest %></td>
      <td><%= @sport_result.waist %></td>
      <td><%= @sport_result.belly %></td>
      <td><%= @sport_result.ass %></td>
      <td><%= @sport_result.leg %></td>
    </tr>
  </tbody>
</table>

<section class="py-6">
  <div class="container flex flex-col justify-center p-4 mx-auto">
    <div class="grid grid-cols-1 gap-4 lg:grid-cols-4 sm:grid-cols-2">
      <% @sport_result.images.each do |image| %>
          <%= image_tag image, class:"object-cover w-full dark:bg-gray-500 aspect-square" %>
      <% end %>
    </div>
  </div>
</section>

<div class="flex divide-x-2 rounded dark:text-gray-100 divide-gray-700">


