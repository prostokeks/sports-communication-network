<% provide(:header, "Contact") %>

<section class="p-6 dark:text-gray-800">
    <%= form_with(model: @contact) do |c| %>
    <div class="container w-full max-w-xl p-8 mx-auto space-y-6 ng-untouched ng-pristine ng-valid">
    <h2 class="w-full text-3xl font-bold leading-tight">Contact us</h2>
    <div>
      <%= c.label :name, class: "block mb-1 ml-1" %>
      <%= c.text_field :name, required: true, class: "block w-full p-2 rounded focus:outline-none focus:ring focus:ring-opacity-25 focus:ring-blue-300", placeholder: "Your name" %>
    </div>
    <div>
      <%= c.label :email, class: "block mb-1 ml-1" %>
      <%= c.text_field :email, required: true, class: "block w-full p-2 rounded focus:outline-none focus:ring focus:ring-opacity-25 focus:ring-blue-300", placeholder: "Your name" %>
    </div>
    <div>
      <%= c.label :message, class: "block mb-1 ml-1" %>
      <%= c.text_field :message, required: true, class: "block w-full p-2 rounded focus:outline-none focus:ring focus:ring-opacity-25 focus:ring-blue-300", placeholder: "Your name" %>
    </div>
    <div>
      <%= c.submit "Send", class: "w-full px-4 py-2 font-bold rounded shadow focus:outline-none focus:ring hover:ring focus:ring-opacity-50 dark:bg-sky-300 focus:ring-sky-300 hover:ring-sky-300 dark:text-gray-900" %>
    </div>
  </div>
    <% end %>
</section>
